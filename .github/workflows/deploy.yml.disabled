name: Deploy Bot
on:
  push:
    branches: [main]
    paths:
      - '!docs/**'
      - '!mkdocs.yml'
      - '!*.md'

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Deploy via SSH
        uses: appleboy/ssh-action@v1.0.0
        with:
          host: ${{ secrets.VPS_HOST }}
          username: ${{ secrets.VPS_USER }}
          key: ${{ secrets.VPS_SSH_KEY }}
          script: |
            cd /root/KITON
            # Сохраняем базу данных перед обновлением
            cp database.db database.db.backup 2>/dev/null || true
            # Обновляем код
            git fetch origin main
            git reset --hard origin/main
            # Восстанавливаем базу данных
            cp database.db.backup database.db 2>/dev/null || true
            /root/KITON/venv/bin/pip install -r requirements.txt
            systemctl daemon-reload
            systemctl restart kiton
